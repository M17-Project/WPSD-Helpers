# ensure avahi loads BEFORE NextionDriver, as Lucas, AE0LI, found that avahi likes to bind to any random port, which can cause a Transparent Data port conflict
#if ! grep -q "avahi" /lib/systemd/system/nextiondriver.service ; then
if grep -q "avahi" /lib/systemd/system/nextiondriver.service ; then
    #sed -i 's/^Before=timers.target$/Before=avahi-daemon.socket avahi-daemon.service timers.target/' /lib/systemd/system/nextiondriver.service
    sed -i 's/^Before=.*/Before=timers.target/' /lib/systemd/system/nextiondriver.service
    systemctl daemon-reload
    systemctl restart avahi-daemon.socket
    systemctl restart avahi-daemon.service
fi

