[Unit]
Description=Run WPSD NX Text Update on Shutdown (After Unmount)
DefaultDependencies=no
Requires=nextiondriver.service
After=umount.target
Before=final.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/local/sbin/.wpsd-nextion-text.py "/dev/ttyAMA0" "t0" Safe to power off"
Environment=SYSTEMD_INHIBIT_DELAY_MAX_USEC=0

[Install]
WantedBy=umount.target
